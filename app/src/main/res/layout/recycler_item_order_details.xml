<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ir.tahasystem.music.app.custom.TextViewBold style="@style/Text"
            android:id="@+id/itemTextViewName"

            android:layout_width="fill_parent"
            android:layout_height="60sp"
            android:gravity="top|right"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="کالا خرید از شیراز تخفیف "
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ir.tahasystem.music.app.custom.TextViewNumBold style="@style/Text"
            android:id="@+id/itemTextViewDes"
            android:textSize="12sp"
            android:layout_width="fill_parent"
            android:layout_height="30sp"
            android:layout_marginLeft="1dp"
            android:ellipsize="end"
            android:gravity="top|right"
            android:textColor="#808080"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom|center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ir.tahasystem.music.app.custom.TextViewNumBold style="@style/Text"
                android:id="@+id/itemTextViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:singleLine="true"
                android:text="@string/p1"
                android:textColor="@color/color_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ir.tahasystem.music.app.custom.TextViewNumLight style="@style/Text"
                android:id="@+id/itemTextViewPriceByDiscount"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical|left"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:singleLine="true"
                android:text="@string/p0"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#808080" />


        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal"
            android:padding="8dp">



                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:id="@+id/fab_add_basket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_selector">

                    <ir.tahasystem.music.app.custom.TextViewLight style="@style/Text"
                        android:id="@+id/fab_add_basket_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:padding="3dp"
                        android:text="@string/add_basket"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/fab_add_basket_text"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_add_shopping_cart_white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_toLeftOf="@id/fab_add_basket"
                    android:layout_marginRight="10dp"
                    android:id="@+id/fab_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_selector">

                    <ir.tahasystem.music.app.custom.TextViewLight style="@style/Text"
                        android:id="@+id/fab_details_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:padding="3dp"
                        android:text="@string/details_kala"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/fab_details_text"
                        android:layout_marginLeft="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_info_white_24dp" />
                </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
