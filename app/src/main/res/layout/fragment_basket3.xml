<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:fillViewport="true"
                android:orientation="vertical">

                <ir.tahasystem.music.app.custom.TextViewLight
                    style="@style/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="3dp"
                    android:text="@string/person_info"
                    android:textColor="@color/color_primary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="100"
                        android:background="@drawable/edt_btn2"
                        android:gravity="right|center"
                        android:textColor="#fff"
                        android:textColorHint="@color/color_hint"
                        android:theme="@style/TextLabel">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <ir.tahasystem.music.app.custom.EditTextLight
                                android:id="@+id/reg_family"
                                style="@style/Text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"

                                android:layout_gravity="center_horizontal"
                                android:layout_margin="1dp"
                                android:layout_weight="100"

                                android:background="@null"
                                android:cursorVisible="true"
                                android:ellipsize="start"

                                android:gravity="right|center"
                                android:hint="@string/family"
                                android:inputType="text"
                                android:lines="1"

                                android:maxLines="1"
                                android:paddingTop="6dp"
                                android:singleLine="true"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#fff"
                                android:textColorHint="@color/color_hint"
                                android:textCursorDrawable="@null" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_person_outline_white_48dp" />

                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="100"
                        android:background="@drawable/edt_btn2"
                        android:gravity="right|center"
                        android:textColor="#fff"
                        android:textColorHint="@color/color_hint"
                        android:theme="@style/TextLabel">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <ir.tahasystem.music.app.custom.EditTextLight
                                android:id="@+id/reg_name"
                                style="@style/Text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="1dp"
                                android:layout_weight="100"
                                android:background="@null"
                                android:cursorVisible="true"
                                android:ellipsize="start"
                                android:gravity="right|center"
                                android:hint="@string/name"
                                android:inputType="text"
                                android:lines="1"
                                android:maxLines="1"
                                android:paddingTop="6dp"
                                android:singleLine="true"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#fff"
                                android:textColorHint="@color/color_hint"
                                android:textCursorDrawable="@null" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_person_outline_white_48dp" />

                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="100"
                        android:background="@drawable/edt_btn2"
                        android:gravity="right|center"
                        android:textColor="#fff"
                        android:textColorHint="@color/color_hint"
                        android:theme="@style/TextLabel">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ir.tahasystem.music.app.custom.EditTextLight
                                android:id="@+id/reg_tel"
                                style="@style/Text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="1dp"
                                android:layout_weight="100"
                                android:background="@null"
                                android:cursorVisible="true"
                                android:ellipsize="start"
                                android:gravity="right|center"
                                android:hint="@string/tel"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLines="1"
                                android:paddingTop="6dp"
                                android:singleLine="true"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#fff"
                                android:textCursorDrawable="@null" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/call" />

                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="100"
                        android:background="@drawable/edt_btn2"
                        android:gravity="right|center"
                        android:textColor="#fff"
                        android:textColorHint="@color/color_hint"
                        android:theme="@style/TextLabel">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ir.tahasystem.music.app.custom.EditTextLight
                                android:id="@+id/reg_mobile"
                                style="@style/Text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="1dp"
                                android:layout_weight="100"
                                android:background="@null"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:editable="false"
                                android:ellipsize="start"
                                android:gravity="right|center"
                                android:hint="@string/mobile"
                                android:inputType="number"
                                android:lines="1"
                                android:longClickable="false"
                                android:maxLines="1"
                                android:paddingTop="6dp"
                                android:singleLine="true"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#fff"
                                android:textColorHint="@color/color_hint"
                                android:textCursorDrawable="@null" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/call" />

                        </LinearLayout>


                    </FrameLayout>


                </LinearLayout>

                <ir.tahasystem.music.app.custom.TextViewLight
                    style="@style/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:text="@string/offer_type"
                    android:textColor="@color/color_primary" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ir.tahasystem.music.app.custom.CustomCheckBox
                        android:id="@+id/reg_address1_chk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:button="@null"
                        android:checked="true"
                        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                        android:text="@string/address_1"
                        android:textColor="#808080"
                        android:theme="@style/checkBoxStyle" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/reg_address1_chk"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/find_route_map0"
                            style="@style/Text"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/edt_btn2"
                            android:ellipsize="end"
                            android:gravity="center|left"
                            android:src="@drawable/map_ico" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="100"
                            android:background="@drawable/edt_btn2"
                            android:gravity="right|center"
                            android:textColor="#fff"
                            android:textColorHint="@color/color_hint"
                            android:theme="@style/TextLabel">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <ir.tahasystem.music.app.custom.EditTextLight
                                    android:id="@+id/reg_address1"
                                    style="@style/Text"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="5dp"
                                    android:layout_weight="100"
                                    android:background="@null"
                                    android:cursorVisible="true"
                                    android:ellipsize="start"
                                    android:gravity="right|center"
                                    android:hint="@string/address_1"
                                    android:inputType="text|textMultiLine"
                                    android:maxLines="4"
                                    android:paddingTop="6dp"
                                    android:scrollHorizontally="false"
                                    android:singleLine="false"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#fff"
                                    android:textColorHint="@color/color_hint"
                                    android:textCursorDrawable="@null" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/map_ico" />

                            </LinearLayout>

                        </FrameLayout>


                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ir.tahasystem.music.app.custom.CustomCheckBox
                        android:id="@+id/reg_address2_chk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:button="@null"
                        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                        android:text="@string/address_2"
                        android:textColor="#808080"
                        android:theme="@style/checkBoxStyle" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/reg_address2_chk"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/find_route_map1"
                            style="@style/Text"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/edt_btn2"
                            android:ellipsize="end"
                            android:gravity="center|left"
                            android:src="@drawable/map_ico" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="100"
                            android:background="@drawable/edt_btn2"
                            android:gravity="right|center"
                            android:textColor="#fff"
                            android:textColorHint="@color/color_hint"
                            android:theme="@style/TextLabel">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <ir.tahasystem.music.app.custom.EditTextLight
                                    android:id="@+id/reg_address2"
                                    style="@style/Text"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="5dp"
                                    android:layout_weight="100"
                                    android:background="@null"
                                    android:cursorVisible="true"
                                    android:ellipsize="start"
                                    android:gravity="right|center"
                                    android:hint="@string/address_2"
                                    android:inputType="text|textMultiLine"
                                    android:maxLines="4"
                                    android:paddingTop="6dp"
                                    android:scrollHorizontally="false"
                                    android:singleLine="false"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#fff"
                                    android:textColorHint="@color/color_hint"
                                    android:textCursorDrawable="@null" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/map_ico" />

                            </LinearLayout>

                        </FrameLayout>


                    </LinearLayout>


                </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <ir.tahasystem.music.app.custom.CustomCheckBox android:textColor="#808080" android:theme="@style/checkBoxStyle"
                    android:id="@+id/reg_address4_chk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="100"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                    android:text="@string/server_in_place" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ir.tahasystem.music.app.custom.CustomCheckBox android:textColor="#808080" android:theme="@style/checkBoxStyle"
                    android:id="@+id/reg_address3_chk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                    android:text="@string/get_in_place" />


            </LinearLayout>


            <ir.tahasystem.music.app.custom.ButtonBold
                android:id="@+id/reg_btn"
                style="@style/Text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_btn_selector"
                android:drawableLeft="@drawable/buy_icon_btn"
                android:padding="5dp"
                android:text="@string/next"
                android:textColor="#fff"
                android:textSize="20sp" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/no_server_response"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_signal_cellular_connected_no_internet_2_bar_black_24dp" />

            <ir.tahasystem.music.app.custom.TextViewBold
                android:id="@+id/value"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:cursorVisible="true"
                android:ellipsize="start"
                android:gravity="center"
                android:text="@string/server_not_response"
                android:textAppearance="?android:attr/textAppearanceSmall" />


            <ir.tahasystem.music.app.custom.ButtonBold
                android:id="@+id/no_server_response_retry"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/bg_btn_selector"
                android:drawableRight="@drawable/ic_refresh_white_24dp"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/retry"
                android:textColor="#fff"
                android:textStyle="bold" />


        </LinearLayout>
    </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

    <com.gc.materialdesign.views.ProgressBarIndeterminate
        android:id="@+id/list_load"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_gravity="top"
        android:background="@color/color_primary" />


</RelativeLayout>