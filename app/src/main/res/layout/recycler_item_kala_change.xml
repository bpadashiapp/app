<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">


            <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
                android:id="@+id/list_load"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/color_primary"
                android:padding="50dp" />


            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="#fff"
                android:src="@drawable/ic_launcher" />

            <ir.tahasystem.music.app.custom.TextViewNumBold style="@style/Text"
                android:id="@+id/itemTextViewDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="5dp"
                android:background="@drawable/oval"
                android:padding="10dp"
                android:text="7%"
                android:textColor="#fff"
                android:textSize="18dp" />


        </FrameLayout>


        <ir.tahasystem.music.app.custom.TextViewBold style="@style/Text"
            android:id="@+id/itemTextViewName"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="false"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ir.tahasystem.music.app.custom.TextViewNormal style="@style/Text"
            android:id="@+id/itemTextViewDes"
            android:textSize="12sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:ellipsize="end"
            android:gravity="center|right"
            android:singleLine="false"
            android:textColor="#808080"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom|left"
            android:orientation="horizontal"
            android:padding="8dp">


            <ir.tahasystem.music.app.custom.TextViewNumLight style="@style/Text"
                android:id="@+id/chg_cprice"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="20dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:singleLine="true"
                android:text="@string/p0"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#808080" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="bottom|left"
                android:layout_weight="100"
                android:orientation="vertical"
                android:padding="8dp">

                <ir.tahasystem.music.app.custom.TextViewNumLight style="@style/Text"
                    android:id="@+id/chg_price"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="20dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:singleLine="true"
                    android:text="@string/p0"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_primary" />

                <ir.tahasystem.music.app.custom.TextViewNumLight style="@style/Text"
                    android:id="@+id/chg_price_discount"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="20dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#808080" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom|left"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="gone">

            <ir.tahasystem.music.app.custom.TextViewNumLight style="@style/Text"
                android:id="@+id/chg_unit_in_stock"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="20dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:singleLine="true"
                android:text="@string/p0"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#808080" />

            <ir.tahasystem.music.app.custom.TextViewNumLight style="@style/Text"
                android:id="@+id/chg_min_order"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="20dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:singleLine="true"
                android:text="@string/p0"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#808080" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal"
            android:padding="8dp">


            <RelativeLayout
                android:id="@+id/fab_add_basket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_btn_selector">

                <ir.tahasystem.music.app.custom.TextViewLight style="@style/Text"
                    android:id="@+id/fab_add_basket_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/change_details"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/fab_add_basket_text"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_settings_white_24dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fab_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/fab_add_basket"
                android:background="@drawable/bg_btn_selector"
                android:visibility="gone">

                <ir.tahasystem.music.app.custom.TextViewLight style="@style/Text"
                    android:id="@+id/fab_details_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/details_kala"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/fab_details_text"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_info_white_24dp" />
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
